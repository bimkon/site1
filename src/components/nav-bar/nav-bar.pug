include ../../components/buttons/buttons.pug

mixin nav-bar({first, second, third, fourth, fifth, sixth, submenuitem1, submenuitem2, submenuitem3, isLogged})

  case isLogged

    when 'logged'
      .bar
        .bar__body.between
          .bar__logo-toxin
            +logo-toxin()
          .bar__right-column
              nav.bar__navigation
                ul.topmenu
                  li.navig
                    a.navig__link.active(href='link.html')= first
                  li.navig
                    a.navig__link(href='link.html')= second
                    ul.submenu
                      li.submenu__item1
                        a.submenu__link1(href="link.html")= submenuitem1
                      li.submenu__item2
                        a.submenu__link1(href="link.html")= submenuitem2
                      li.submenu__item3
                        a.submenu__link1(href="link.html")= submenuitem3
                    img.navig__image(src="expand_more.jpg" alt="стрелка - указатель")
                  li.navig
                    a.navig__link(href='link.html')= third
                  li.navig
                    a.navig__link.px(href='link.html')= fourth
                  li.navig
                    a.navig__link(href='link.html')= fifth
                    ul.submenu
                      li.submenu__item1
                        a.submenu__link1(href="link.html")= submenuitem1
                      li.submenu__item2
                        a.submenu__link1(href="link.html")= submenuitem2
                      li.submenu__item3
                        a.submenu__link1(href="link.html")= submenuitem3
                    img.navig__image(src="expand_more.jpg" alt="стрелка - указатель")
              .user
                img.user__arrow(src="rectangle.png", alt="вертикальная линия")
                .user-text='Юлий Цезарь'
   
    default
        .bar
          .bar__body.between
            .bar__logo-toxin
              +logo-toxin()
            .bar__right-column
              nav.bar__navigation
                ul.topmenu
                  li.navig
                    a.navig__link.active(href='link.html')= first
                  li.navig
                    a.navig__link(href='link.html')= second
                    ul.submenu
                      li.submenu__item1
                        a.submenu__link1(href="link.html")= submenuitem1
                      li.submenu__item2
                        a.submenu__link1(href="link.html")= submenuitem2
                      li.submenu__item3
                        a.submenu__link1(href="link.html")= submenuitem3
                    img.navig__image(src="expand_more.jpg" alt="стрелка - указатель")
                  li.navig
                    a.navig__link(href='link.html')= third
                  li.navig
                    a.navig__link.px(href='link.html')= fourth
                  li.navig
                    a.navig__link(href='link.html')= fifth
                    ul.submenu
                      li.submenu__item1
                        a.submenu__link1(href="link.html")= submenuitem1
                      li.submenu__item2
                        a.submenu__link1(href="link.html")= submenuitem2
                      li.submenu__item3
                        a.submenu__link1(href="link.html")= submenuitem3
                    img.navig__image(src="expand_more.jpg" alt="стрелка - указатель")
                .bar__buttons
                  .bar__login-button
                    +button({styleType: 'empty', href: 'link.html', text: 'Войти', isShort: 'short'})
                  .bar__password-button
                    +button({styleType: 'long', href: 'link.html', text: 'Зарегистрироваться', isShort: 'short'})





