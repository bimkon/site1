mixin text-field({ type = 'text', name, placeholder, typeOfField, size })
    - const sizeModifiers = { short: 'subscription__form_short' }
    - const classes = [sizeModifiers[size]]
    case typeOfField
        when 'Subscribe'
            form.subscription(action="", method="get", class=classes)
                input(type="text", name="email", placeholder="Email", class='subscription__input')
                button.subscription__button(type='submit') arrow_forward
    case typeOfField
        when 'masked'
            input(type=type, name=name, placeholder='ДД.ММ.ГГГГ', class= `text-field js-text-field_masked`)
    case typeOfField
        when 'normal'
            input(type=type, name=name, placeholder=placeholder, class= 'text-field')
