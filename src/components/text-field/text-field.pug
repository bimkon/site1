mixin text-field({ type = 'text', name, placeholder, typeOfField, isShort=' '} = {})

    - let maskedThemeModifier = ''
    
    case typeOfField
        when 'Subscribe'
            form.subscription__form(action="", method="get", class=`subscription__form_${isShort}`)
                input(type="text" name="email" placeholder="Email" class='subscription__input')
                button.subscription__button(type='submit') arrow_forward
    case typeOfField
        when 'masked'
            - maskedThemeModifier = ' js-text-field__masked'
            - placeholder = 'ДД.ММ.ГГГГ'
            input(type=type, name=name, placeholder=placeholder, class= `input-field${maskedThemeModifier}`)
    case typeOfField
        when 'normal'
            input(type=type, name=name, placeholder=placeholder, class= 'input-field')
    
 
    

