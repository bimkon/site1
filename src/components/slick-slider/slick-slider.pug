include ../star/star.pug

mixin slick-slider({ image1, image2, image3, image4, number, isLux, cost, votes, rating, arrow="", }={})
    .slick__slider(class=`${arrow}`)
        .slick__content
            .slider__item
                img(src=(`${image1}`), alt="комната")
            .slider__item
                img(src=(`${image2}`), alt="комната")
            .slider__item
                img(src=(`${image3}`), alt="комната")
            .slider__item
                img(src=(`${image4}`), alt="комната")
        .slick__describtion
            .slick__row
                .slick__paragraph
                    span.slick__no №
                    span.slick__number=number
                    span.slick__type-of-room=isLux
                .slick__paragraph
                    span.slick__price=cost
                    span.slick__price ₽
                    span.slick__in-time   в сутки
            .slick__row
                .slick__underline
                    img(src=("line.svg"), alt="line")
            .slick__row
                .slick__paragraph
                    +rate-button({ name: 'rating', value: `${rating}`, isChecked5: 'checked'})
                .slick__paragraph
                    span.slick__reviews-number=votes
                    span.slick__reviews   Отзывов