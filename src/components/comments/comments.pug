mixin comment({avatarSourcePath, likeNumber, name, date, text}={})   

    .comment
        .comment__avatar-block
            .comment__avatar
                img.comment__image(src=avatarSourcePath, alt="логотип")
            +like-button({likeNumber: '12', isChecked: 'checked' })
        .comment__body
            .comment__name=name
            .comment__date=date
            .comment__text=text
