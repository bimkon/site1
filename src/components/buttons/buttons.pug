mixin button({styleType, href, text,}={})

    case styleType
        when 'simple'
            .buttons__item
                a.button.buttons__hover(href=href)=text

        when 'empty'
            .buttons__item
                a.button.buttons__white(href=href)=text

        when 'borderless'
            .buttons__item
                a.button.buttons__borderless(href=href)=text
                
        when 'long'
            .buttons__item
                form.buttons__form(action=href, method="get")
                    a.button.buttons__long(href=href)=text
                    button.buttons__arrow(type='submit') arrow_forward