include ../../components/text-field/text-field.pug
include ../../components/heading/heading.pug
include ../../components/footer__menu/footer__menu.pug

mixin footer-links({ values = [{headerOfLink, links }],mainfooterDescribtion,headerOfSubscribe,subscribeText,})
    .footer
        .footer__wrapper
            .footer__menu
                .footer__toxin-icon
                    +logo-toxin()
                .footer__toxin-text=mainfooterDescribtion
            each value in values
                - const { headerOfLink, links} = value   
                .footer__menu
                    .footer__header
                        +heading({ type: 'h3', text: headerOfLink, })
                    +foooter__menu({links})
            .footer__menu
                .footer__header
                    +heading({ type: 'h3', text: `${headerOfSubscribe}`, })
                .footer__subscribe-text=subscribeText
                .footer__subscribe-button
                    +text-field({ placeholder: 'Email',  typeOfField: 'Subscribe', size: 'short' })