mixin date-dropdown({ inputField = 'single', firstHeading, secondHeading  } = {})
 
    //- - let darkThemeModifier = ''
    //- - let maskedThemeModifier = ''
    //- - let isClickableModifier = ''

    case inputField
        when 'single'
            .datepicker__container
                span.datepicker__title #{firstHeading}
                i.datepicker__arrow expand_more
                input.datepicker-here(type="text" 
                        data-multiple-dates="2"
                        data-multiple-dates-separator=" - "
                        data-position='right top'
                        data-range="true"
                        placeholder="ДД.МЕС - ДД.МЕС"
                        readonly
                    )
        when 'two-inputs'
            .datepicker__container
                span.datepicker__title #{firstHeading}
                i.datepicker__arrow expand_more
                input.datepicker-two-inputs.datepicker__start(type="text" 
                        data-multiple-dates="2"
                        data-multiple-dates-separator=" - "
                        data-position='right top'
                        data-range="true"
                        placeholder="ДД.ММ.ГГГГ"
                        readonly
                    )
                span.datepicker__title #{secondHeading}
                i.datepicker__arrow expand_more
                input.datepicker-two-inputs.datepicker__end(type="text" 
                        data-multiple-dates="2"
                        data-multiple-dates-separator=" - "
                        data-position='right top'
                        data-range="true"
                        placeholder="ДД.ММ.ГГГГ"
                        readonly
                    )
    
  
 
 

