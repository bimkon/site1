                            +room-card({ values: [{image: 'room-image-2.jpg'}, {image: 'room-image-2.jpg'}, {image: 'room-image-2.jpg'}, {image: 'room-image-2.jpg'}], number: '840', cost: '9 900', votes: '65', rating: '4' })
