extends ../basepage/basepage.pug
include ../../components/filter/filter.pug
include ../../components/range-slider/range-slider.pug
include ../../components/checkbox-buttons/checkbox-buttons.pug
include ../../components/expandable-checkbox-block/expandable-checkbox-block.pug
include ../../components/room-card/room-card.pug
include ../../components/pagination/pagination.pug
block variables
    - var pageTitle='Search-room'
block content
    main.search-room
        section.search-room__filter
            .search-room__item
                +heading({ type: 'h3', text: 'даты пребывания в отеле', })
                +datepicker-container({ inputField: 'single', })
            .search-room__item
                +heading({ type: 'h3', text: 'Гости', })
                +dropdown({
                        text: 'Сколько гостей',
                        hasButtons: true,
                        options: [
                        { text: 'взрослые', group: 'гости' },
                        { text: 'дети', group: 'гости' },
                        { text: 'младенцы' },
                        ],
                })
            .search-room__item
                +range-slider({
                    headerText: 'Диапазон цены',
                    type: 'double',
                    min: 1000,
                    max: 15000,
                    step: 1,
                    from: 5000,
                    to: 10000,
                    })
                .range-slider__description Стоимость за сутки пребывания в номере
            .search-room__item
                .search-room__checkbox-heading
                    +heading({ type: 'h3', text: 'Правила дома', })
                .search-room__checkbox-button
                    +checkbox-buttons({ values: [{ text: 'Можно курить', }, { text: 'Можно с питомцами',    isChecked: 'checked'}, { text: 'Можно пригласить гостей (до 10 человек)',    isChecked: 'checked'}], })
            .search-room__item
                .search-room__checkbox-heading-rich
                    +heading({ type: 'h3', text: 'Доступность', })
                .search-room__rich-button
                    +checkbox-buttons({values: [{ text: 'Широкий коридор', description: 'Ширина коридоров в номере не менее 91 см.', typeOfCheckBox: 'rich-checkbox'},{ text: 'Помощник для инвалидов', description: 'На 1 этаже вас встретит специалист    и проводит до номера.', typeOfCheckBox: 'rich-checkbox'}] })
            .search-room__item
                +heading({ type: 'h3', text: 'Удобства номера', })
                +dropdown({
                    width: 'short',
                    options: [
                    { text: 'спальни', number: 2, },
                    { text: 'кровати', number: 2, },
                    { text: 'ванные комнаты',number: 2, },
                    ],
                })
            .search-room__item
                +expandable-checkbox-block({ header: 'Дополнительные удобства'})
        section.search-room__column
                .search-room__title Номера, которые мы для вас подобрали
                .search-room__rooms
                    .search-room__row
                        .search-room__number
                            +room-card({ values: [{image: 'room-image-1.jpg'}, {image: 'room-image-1.jpg'}, {image: 'room-image-1.jpg'}, {image: 'room-image-1.jpg'}], number: '888', isLux: 'Люкс', cost: '9 990', votes: '145', rating: '5'})
