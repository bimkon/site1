include ../../components/logo-icon/logo-icon.pug
block variables
- var pageClass
  - keywords = 'task number 2'
  - description = 'Страницы макета'
doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name="keywords" content=keywords)
        meta(name="description" content=description)
        title #{title}
        link(rel="icon", href="favicon.svg", type="image/svg+xml", sizes="16x16 32x32")
        link(rel="icon", href="favicon.png", type="image/png", sizes="16x16 32x32")
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body(class=`${pageClass}`)
        .base-ui
            .base-ui__logo-container
                +logo-icon()
            block content
