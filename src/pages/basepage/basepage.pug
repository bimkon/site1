include ../../components/navigation-bar/navigation-bar.pug
include ../../components/footer/footer.pug
include ../../components/footer-copyright/footer-copyright.pug
include ../../components/footer-creative/footer-creative.pug
include ../../components/logo-toxin/logo-toxin.pug
include ../../components/social/social.pug
include ./layout/layout.pug
block variables
    - keywords = 'FSD, frontend'
    - description = 'junior frontend разработчика'
doctype html
html(lang='en')
    head
        meta(charset="utf-8")
        meta(name="keywords" content=keywords)
        meta(name="description" content=description)
        title=pageTitle
        link(rel="icon", href="favicon.svg", type="image/svg+xml", sizes="16x16 32x32")
        link(rel="icon", href="favicon.png", type="image/png", sizes="16x16 32x32" )
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body
        +layout
            +layout__header
                block header
                    +navigation-bar({ values: [
                        {
                            link: '/mock-address/change-me',
                            text: 'О нас',
                            isActive: 'true',
                        },
                        {
                            link: '/mock-address/change-me',
                            text: 'Услуги',
                            links: [
                                {href:'/mock-address/change-me', textLink:'Book'},
                                {href:'/mock-address/change-me', textLink:'Order'},
                        ]
                        },
                        {
                            link: '/mock-address/change-me',
                            text: 'Вакансии',
                        },
                        {
                            link: '/mock-address/change-me',
                            text: 'Новости',
                        },
                        {
                            link: '/mock-address/change-me',
                            text: 'Соглашения',
                            links: [
                                {href:'/mock-address/change-me', textLink:'Book'},
                                {href:'/mock-address/change-me', textLink:'Order'},
                        ]
                        },
                    ],
                    })
            +layout__main
                block content
            +layout__footer
                block footer
                    +footer({ values: [
                        {
                            headerOfLink: 'Навигация',
                            links: [
                                {textLink: 'О нас'},
                                {textLink: 'Новости'},
                                {textLink: 'Служба поддержки'},
                                {textLink: 'Услуги'},
                            ],
                        },
                        {
                            headerOfLink: 'О нас',
                            links: [
                                {textLink: 'О сервисе'},
                                {textLink: 'Наша команда'},
                                {textLink: 'Вакансии'},
                                {textLink: 'Инвесторы'},
                            ],
                        },
                        {
                            headerOfLink: 'Служба поддержки',
                            links: [
                                {textLink: 'Соглашения'},
                                {textLink: 'Сообщества'},
                                {textLink: 'Связь с нами'},
                            ],
                        },
                        ],
                        mainfooterDescribtion: 'Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»',
                        headerOfSubscribe: 'Подписка',
                        subscribeText: 'Получайте специальные предложения и новости сервиса',
                        })
                    +footer-copyright()
                    +footer-creative()
