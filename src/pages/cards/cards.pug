                    +room-card({ values: [{image:'room-image-two.jpg'},{image:'room-image-two.jpg'},{image:'room-image-two.jpg'},{image:'room-image-two.jpg'}], number: '840', cost: '9 900', votes: '65', rating: '4',  })
