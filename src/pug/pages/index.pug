//- используем макет(шаблон)main.pug в качестве основы
extends ../../components/base/layout/main

//- опишем константы для текущей страницы
block variables
  - var title = 'Colors & Type'

block content
  main
    .content-wrapper_two-columns.side-indent
      .colors_wrapper
        +item-colors('colors__squares_shade100','Dark Shade 100%', '#1F2041')
        +item-colors('colors__squares_shade75','Dark Shade 75%', '#1F2041')
        +item-colors('colors__squares_shade50','Dark Shade 50%', '#1F2041')
        +item-colors('colors__squares_shade25','Dark Shade 25%', '#1F2041')
        +item-colors('colors__squares_shade5','Dark Shade 5%', '#1F2041')
        +item-colors('colors__squares_purple','Purple', '#BC9CFF')
        +item-colors('colors__squares_green','Green', '#6FCF97')

      .type-wrapper
        +item-type('type__block-1', 'H1', 'type__text-1', 'This one is the sub-section or widget title')
        +item-type('type__block-2', 'H2', 'type__text-2', 'Next one is the item title inside widgets')
        +item-type('type__block-3', 'H3', 'type__text-3', 'This is a label or CTA text')
        +item-type('type__block-4', 'Body', 'type__text-4', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')

